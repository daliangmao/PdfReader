<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:startupUI="http://schemas.android.com/apk/res-auto"
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="300dp" android:layout_height="270dp"
    android:background="@android:color/white">

    <com.artifex.mupdfdemo.Helper.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-SemiBold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        android:text="Setting"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/pinktitle"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/white" />

    <com.artifex.mupdfdemo.Helper.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Theme"
        android:id="@+id/lblTheme"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btnSun"
        android:background="@null"
        android:src="@drawable/btn_sun"
        android:scaleType="fitCenter"
        android:layout_below="@+id/lblTheme"
        android:layout_alignLeft="@+id/lblTheme"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btnMoon"
        android:background="@null"
        android:src="@drawable/btn_moon"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/btnSun"
        android:layout_toRightOf="@+id/btnSun"
        android:layout_toEndOf="@+id/btnSun"
        android:layout_marginLeft="50dp" />

    <com.artifex.mupdfdemo.Helper.TypefaceTextView
        startupUI:customTypeface="fonts/ThaiSansNeue-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:text="Brightness"
        android:id="@+id/lblBrightness"
        android:layout_below="@+id/btnSun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/darker_gray" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/lblBrightness"
        android:layout_alignLeft="@+id/lblBrightness"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:max="100" />

</RelativeLayout>